@model IEnumerable<owaitlist.Models.Restaurant>
@using owaitlist;

@if (Model != null)
    {
        if (Model.Count() == 0)
        {
            <h2>found no restaurants</h2>
            <h3>Or...maybe they don't use owls? Contact us and we'll try to get them onboard!</h3>
        }
        else
        {
            <h2>found @Model.Count() restaurant(s)</h2>
            foreach (var item in Model)
            {
                <div class="search-result-container">
                    <h4>@Html.ActionLink(item.Name, "Show", new { id = item.Id })</h4>
                    <div class="search-result-details">Ratings</div>
                    <div class="serach-result-location">@item.Location</div>
                    <br />
                </div>                                   
            }
        }
    }